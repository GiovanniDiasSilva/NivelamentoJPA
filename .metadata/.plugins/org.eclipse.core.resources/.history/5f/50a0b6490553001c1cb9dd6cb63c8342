package aplicacao;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import dominio.Pessoa;

public class Programa {
	public static void main(String[] args) {

		Pessoa p1 = new Pessoa(null, "Giovanni Dias", "giovanni.kds@gmail.com");
		Pessoa p2 = new Pessoa(null, "Marcella", "marcella@gmail.com");
		Pessoa p3 = new Pessoa(null, "Lucilene", "lucilenekg@gmail.com");
		Pessoa p4 = new Pessoa(null, "Pia Isabel", "piaisabellovato@gmail.com");
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("exemplo-jpa");
		EntityManager em = emf.createEntityManager();
		em.getTransaction().begin();
		em.persist(p1);
		em.persist(p2);
		em.persist(p3);
		em.persist(p4);
		em.getTransaction().commit();
		System.out.println("Pronto");
	}
}
